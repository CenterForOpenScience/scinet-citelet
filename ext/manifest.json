{
    "name" : "citelet",
    "manifest_version" : 2,
    "version" : "0.1",
    "description" : "",
    "content_scripts" : [{
        "matches" : ["<all_urls>"],
        "js" : [
            "lib/jquery-1.9.1.js", 
            "lib/jquery-ui.js", 
            "citelet.cat.js", 
            "citelet.ext.js", 
            "confirm.js",
            "main.js"
        ],
        "css" : ["lib/jquery-ui.css"]
    }],
    "options_page" : "options.html",
    "permissions" : [
        "tabs", "storage",
        "*://127.0.0.1/*"
    ],
    "web_accessible_resources" : [
        "lib/images/*"
    ]
}
